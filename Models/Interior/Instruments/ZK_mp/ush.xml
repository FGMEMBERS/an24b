<!-- Heading indicator USH
3D instrument for Tu-154 -->
<PropertyList>
 <path>ush.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>index</object-name>
  <object-name>compass</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
</animation>

<!--Needles -->

<animation>
    <type>rotate</type>
    <object-name>needle_1</object-name>
    <object-name>needle_2</object-name>
    <property>instrumentation/gik-1/indicated-heading</property>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>index</object-name>
  <property>instrumentation/gik-1/indicated-heading</property>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
