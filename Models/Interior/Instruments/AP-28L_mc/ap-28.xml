<?xml version="1.0"?>

<!-- Pilots' remote control for AP -->

<PropertyList>
 <path>ap-28.ac</path>

<!-- Lamps -->

<model>
  <path>wl_ready.xml</path>
  <offsets>
    <x-m>-0.0391</x-m>
    <y-m>-0.0277</y-m>
    <z-m>-0.025</z-m>
    <pitch-deg>-90</pitch-deg>
  </offsets>
</model>

<model>
  <path>wl_on.xml</path>
  <offsets>
    <x-m>-0.0391</x-m>
    <y-m>0.0277</y-m>
    <z-m>-0.025</z-m>
    <pitch-deg>-90</pitch-deg>
  </offsets>
</model>

<model>
  <path>wl_push.xml</path>
  <offsets>
    <x-m>0.155</x-m>
    <y-m>-0.0904</y-m>
    <z-m>-0.09</z-m>
    <pitch-deg>-90</pitch-deg>
  </offsets>
</model>

<model>
  <path>wl_pull.xml</path>
  <offsets>
    <x-m>0.155</x-m>
    <y-m>-0.0492</y-m>
    <z-m>-0.09</z-m>
    <pitch-deg>-90</pitch-deg>
  </offsets>
</model>

<model>
  <path>wl_kv.xml</path>
  <offsets>
    <x-m>0.155</x-m>
    <y-m>0.0492</y-m>
    <z-m>-0.09</z-m>
    <pitch-deg>-90</pitch-deg>
  </offsets>
</model>

<!-- Switches -->

<model>
  <path>sw_up-down-l.xml</path>
  <offsets>
    <x-m>0.0037</x-m>
    <y-m>-0.0693</y-m>
    <z-m>-0.0478</z-m>
    <pitch-deg>-90</pitch-deg>
  </offsets>
</model>

 <animation>
   <type>knob</type>
   <object-name>rollknob</object-name>
     <value>0.0</value>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/ap-28l1/buttons/roll-control</property>
      <factor>1</factor>
      <min>-55</min>
      <max>55</max>                
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <object-name>rollknob</object-name>
  <type>rotate</type>
   <property>an24/ap-28l1/buttons/roll-control</property>
   <factor>2</factor>
   <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
   </axis>
 </animation>


<animation>
  <type>pick</type>
  <object-name>rollreset</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-assign</command>
      <property>an24/ap-28l1/buttons/roll-control</property>
      <value>0</value>
    </binding>
  </action>
</animation>

<model>
  <path>sw_up-down-r.xml</path>
  <offsets>
    <x-m>0.0037</x-m>
    <y-m>0.0693</y-m>
    <z-m>-0.0478</z-m>
    <pitch-deg>-90</pitch-deg>
  </offsets>
</model>

<model>
  <path>sw_autotrim.xml</path>
  <offsets>
    <x-m>0.0932</x-m>
    <y-m>-0.0925</y-m>
    <z-m>-0.054</z-m>
    <pitch-deg>-52.5</pitch-deg>
  </offsets>
</model>

<model>
  <path>sw_power.xml</path>
  <offsets>
    <x-m>0.0932</x-m>
    <y-m>-0.0488</y-m>
    <z-m>-0.054</z-m>
    <pitch-deg>-52.5</pitch-deg>
  </offsets>
</model>

<model>
  <path>sw_roll-mode.xml</path>
  <offsets>
    <x-m>0.0932</x-m>
    <y-m>0.0488</y-m>
    <z-m>-0.054</z-m>
    <pitch-deg>-52.5</pitch-deg>
  </offsets>
</model>

<model>
  <path>sw_pitch.xml</path>
  <offsets>
    <x-m>0.0932</x-m>
    <y-m>0.0925</y-m>
    <z-m>-0.054</z-m>
    <pitch-deg>-52.5</pitch-deg>
  </offsets>
</model>

<!-- Buttons -->

<model>
  <path>btn_horizon.xml</path>
  <offsets>
    <x-m>0.155</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.092</z-m>
  </offsets>
</model>

<animation>
  <type>pick</type>
  <object-name>APknob</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-toggle</command>
      <property>an24/ap-28l1/buttons/turn-on</property>
    </binding>
  </action>
</animation>

<animation>
  <type>translate</type>
  <object-name>APknob</object-name>
  <property>an24/ap-28l1/buttons/turn-on</property>
  <factor>0.003</factor>
  <axis>   
   <x1-m>0.1034</x1-m>
   <y1-m>0.0</y1-m>
   <z1-m>-0.0422</z1-m>
   <x2-m>0.0987</x2-m>
   <y2-m>0.0</y2-m>
   <z2-m>-0.0484</z2-m>
  </axis>
</animation>

<model>
  <path>btn_kv.xml</path>
  <offsets>
    <x-m>0.155</x-m>
    <y-m>0.0917</y-m>
    <z-m>-0.092</z-m>
  </offsets>
</model>

</PropertyList>
