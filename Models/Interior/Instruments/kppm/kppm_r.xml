<?xml version="1.0"?>

<PropertyList>
	<path>kppm.ac</path>

<animation>
  <type>material</type>
<!--
  <condition>
    <property>yak-40/switches/board_left</property>
    <greater-than>
      <property>yak-40/systems/electrical/buses/bus27/volts</property>
      <value>16.0</value>
    </greater-than>
  </condition>
-->
  <object-name>back</object-name>
  <object-name>back_0</object-name>
  <object-name>back_1</object-name>
  <object-name>base</object-name>
  <object-name>glass</object-name>
  <object-name>gs_blenker</object-name>
  <object-name>gs_blenker.001</object-name>
  <object-name>hs_blenker</object-name>
  <object-name>hs_blenker.001</object-name>
  <object-name>gs_needle</object-name>
  <object-name>hs_needle</object-name>
  <object-name>knob</object-name>
  <object-name>needle</object-name>
  <object-name>scale</object-name>
   <emission>
     <red>1.0</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
</animation>

<animation>
	<type>rotate</type>
	<object-name>needle</object-name>
        <expression>
          <dif>
	    <property>/instrumentation/gik-1/indicated-heading</property>
            <property>/instrumentation/kppm[1]/scale-offset</property>
          </dif>
        </expression>
	<axis>
		<x>-1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>scale</object-name>
	<property>/instrumentation/kppm[1]/scale-offset</property>
	<axis>
		<x>1</x>
		<y>0</y>
		<z>0</z>
	</axis>
</animation>

<animation>
	<type>translate</type>
	<object-name>hs_needle</object-name>
	<condition>
		<property>instrumentation/nav/nav-loc</property>
	</condition>
	<property>instrumentation/nav/heading-needle-deflection</property>
	<interpolation>
		<entry><ind>-3.5</ind><dep>-0.019</dep></entry>
		<entry><ind>0.0</ind><dep>0.0</dep></entry>
		<entry><ind>3.5</ind><dep>0.019</dep></entry>
	</interpolation>
	<axis>
		<x>0.0</x>
		<y>1.0</y>
		<z>0.0</z>
	</axis>
</animation>

<animation>
	<type>translate</type>
	<object-name>gs_needle</object-name>
	<property>instrumentation/nav/gs-needle-deflection</property>
	<interpolation>
		<!--<entry><ind>-9999.0</ind><dep>-0.0213</dep></entry>-->
		<entry><ind>-3.5</ind><dep>-0.019</dep></entry>
		<entry><ind>0.0</ind><dep>0.0</dep></entry>
		<entry><ind>3.5</ind><dep>0.019</dep></entry>
		<!--<entry><ind>9999.0</ind><dep>0.0213</dep></entry>-->
	</interpolation>
	<axis>
		<x>0.0</x>
		<y>0.0</y>
		<z>1.0</z>
	</axis>
</animation>

<animation>
    <type>select</type>
    <object-name>gs_blenker</object-name>
    <condition>
		<not>
			<property>instrumentation/nav/has-gs</property>
		</not>
    </condition>
</animation>

<animation>
    <type>select</type>
    <object-name>hs_blenker</object-name>
    <condition>
		<not>
			<property>instrumentation/nav/nav-loc</property>
		</not>
    </condition>
</animation>

<animation>
  <type>rotate</type>
  <object-name>knob</object-name>
  <property>/instrumentation/kppm[1]/scale-offset</property>  
  <factor>5</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.02904</y-m>
    <z-m>-0.02885</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Mouse wheel-->
<animation>
  <type>pick</type>
  <object-name>knob</object-name>
  <visible>true</visible>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	var radial=getprop("/instrumentation/kppm[1]/scale-offset");
	radial = radial + 1;
        var normalised = geo.normdeg(radial);
	setprop("/instrumentation/kppm[1]/scale-offset", normalised);
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>knob</object-name>
  <visible>true</visible>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	var radial=getprop("/instrumentation/kppm[1]/scale-offset");
	radial = radial - 1;
        var normalised = geo.normdeg(radial);
	setprop("/instrumentation/kppm[1]/scale-offset", normalised);
      </script>
    </binding>
  </action>
</animation>

</PropertyList>
