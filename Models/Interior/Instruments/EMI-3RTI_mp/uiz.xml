<?xml version="1.0"?>

<PropertyList>
 <path>emi-3k.ac</path>

<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle_t</object-name>
    <object-name>needle_t_uv</object-name>
    <condition>
      <property>an2/instrumentation/emi-3k/serviceable</property>
    </condition> 
    <property>fdm/jsbsim/propulsion/engine[0]/oil-degc</property>
    <interpolation>
	    <entry><ind> 0.0 </ind><dep> -22.0 </dep></entry>
	    <entry><ind> 150.0 </ind><dep> -138.0</dep></entry>
    </interpolation>

<!--    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0092</z-m>
    </center>-->
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>needle_l</object-name>
  <object-name>needle_l_uv</object-name>
  <condition>
    <property>an2/instrumentation/emi-3k/serviceable</property>
  </condition> 
  <property>engines/engine/fuel-flow-gph</property>
  <factor>1.2</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.022</y-m>
    <z-m>-0.017</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>needle_r</object-name>
  <object-name>needle_r_uv</object-name>
  <condition>
    <property>an2/instrumentation/emi-3k/serviceable</property>
  </condition> 
  <property>engines/engine/oil-pressure-psi</property>
  <factor>-1.0</factor>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.022</y-m>
    <z-m>-0.019</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

</PropertyList>
