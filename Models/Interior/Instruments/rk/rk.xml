<!-- Variometer
3D instrument for Tu-154 -->
<PropertyList>
 <path>rk.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>needle</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
     <factor-prop>an24/lights/instrlights</factor-prop>
   </emission>
</animation>

<!--Needles-->
<animation>
    <object-name>needle2</object-name> <!-- This will be needle #1 !!!! -->
    <type>rotate</type>
    <property>/instrumentation/adf/indicated-bearing-deg</property>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<animation>
    <object-name>needle1</object-name>
    <type>rotate</type>
    <property>/instrumentation/adf[1]/indicated-bearing-deg</property>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>


</PropertyList>
